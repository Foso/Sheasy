swagger: '2.0'
info:
  description: 'This is the API documentation for Sheasy.'
  version: 1.0.0
  title: Sheasy API Doc
  termsOfService: 'http://swagger.io/terms/'
  contact:
    email: mail@jensklingenberg.de
  license:
    name: Apache 2.0
    url: 'http://www.apache.org/licenses/LICENSE-2.0.html'
host: '192.168.178.21:8765'
basePath: '/api/v1'
tags:
  - name: pet
    description: Everything about Sheasy
    externalDocs:
      description: Find out more
      url: 'https://github.com/Foso/Sheasy'
schemes:
  - http
paths:

  /apps:
    get:
      tags:
        - apps
      summary: Get installed apps
      description: Returns a list of the installed apps
      operationId: getPetById
      produces:
        - application/json
      responses:
        '200':
          description: successful operation
          schema:
            $ref: '#/definitions/Apps'

        '404':
          description: Apps not found
      security:
        - api_key: []
securityDefinitions:
  petstore_auth:
    type: oauth2
    authorizationUrl: 'http://petstore.swagger.io/oauth/dialog'
    flow: implicit
    scopes:
      'write:pets': modify pets in your account
      'read:pets': read your pets
  api_key:
    type: apiKey
    name: api_key
    in: header
definitions:
  AppsResponse:
    type: object
    required:
      - name
      - photoUrls
    properties:
      id:
        type: integer
        format: int64
      name:
        type: string
        example: doggie
      photoUrls:
        type: array
        xml:
          name: photoUrl
          wrapped: true
        items:
          type: string
      status:
        type: string
        description: pet status in the store
        enum:
          - available
          - pending
          - sold
    xml:
      name: AppsResponse
externalDocs:
  description: Find out more about Swagger
  url: 'http://swagger.io'
